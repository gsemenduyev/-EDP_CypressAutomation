#!/usr/bin/env groovy
import groovy.json.*

def CURRENT_PROJECT_PATH = 'E2E/ePort'

pipeline {

    agent any
    // agent {
    //     label 'Testexecute_c'
    // }

    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
        // stage('Clone Repository') {
        //     steps {
        //         script {
        //             withCredentials([usernamePassword(credentialsId: 'sabuildserver_GIT_TOKEN', usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
        //                 def gitUrl = "https://${GIT_USERNAME}:${GIT_PASSWORD}@github.freewheel.tv/HS/EDP_CypressAutomation.git"
        //                 git url: gitUrl, branch: 'Jenkinc_local'
        //             }
        //         }
        //     }
        // }
        stage('Demo') {
            steps {
                ansiColor('xterm') {
                    echo "\033[31;1mExecuting demo stage:\033[0m"
                    echo "\033[31;1mcommand-1\033[0m"
                    echo "\033[31;1mcommand-2\033[0m"
                }
            }
        }
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                bat """
                cd ${CURRENT_PROJECT_PATH} && npm install
                """
            }
        }
        stage('Run Cypress Tests') {
            steps {
                echo 'Running Cypress tests...'
                bat """
                cd ${CURRENT_PROJECT_PATH} && npx cypress run --browser chrome --headless --spec "cypress/integration/step-definitions/verify-eport-login-page/verify-eport-pages.feature"
                """
            }
        }
        stage('Archive Videos') {
            steps {
                archiveArtifacts artifacts: "${CURRENT_PROJECT_PATH}/cypress/videos/**/*.mp4", allowEmptyArchive: true
            }
        }
    }

    post {
        always {
            script {
                // Generate report
                bat """
                cd ${CURRENT_PROJECT_PATH} && node ./cucumber-html-report.js
                """
                echo 'Post build actions'
                echo "Current workspace: ${env.WORKSPACE}"
                echo "Current project path: ${CURRENT_PROJECT_PATH}"

                // Publish HTML reports
                publishHTML(target: [
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: "${CURRENT_PROJECT_PATH}/cypress/reports",
                    reportFiles: "cucumber-reports/cucumber-html-report/index.html",
                    reportName: 'Cucumber Report',
                    reportTitles: 'Cucumber Report'
                ])

                publishHTML(target: [
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: "${CURRENT_PROJECT_PATH}/cypress/reports",
                    reportFiles: "multi-html-report/index.html",
                    reportName: 'Multi HTML Report',
                    reportTitles: 'Multi HTML Report'
                ])
            }
        }
    }
}
