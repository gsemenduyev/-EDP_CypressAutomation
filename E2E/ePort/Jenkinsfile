pipeline {
    agent {
        label 'testexecute'
    }
    tools {
        nodejs '20'
    }
    options {
        ansiColor('xterm')
    }

    environment {
        CURRENT_PROJECT_PATH = 'E2E/ePort'
        PROD_CONFIG_FILE_ID = '1ad0b80a-404d-45ac-81b1-71cd259794d1'
        QA_CONFIG_FILE_ID = '2a6e4dde-90fd-4b33-870c-94e1ac74261e'
        UAT_CONFIG_FILE_ID = '10596465-25c2-4869-93fe-1b8c63a3dec6'
        EMAILS_SLACK_CONTACTS = '72f4f5fc-2d3c-415d-891d-943c990e74a1'

        PROD_CONFIG_FILE_DESTINATION = 'E2E/ePort/cypress/fixtures/environment/prod-param.json'
        QA_CONFIG_FILE_DESTINATION = 'E2E/ePort/cypress/fixtures/environment/qa-param.json'
        UAT_CONFIG_FILE_DESTINATION = 'E2E/ePort/cypress/fixtures/environment/uat-param.json'
        
        CONFIG_FILE_PATH = 'E2E/ePort/cypress/fixtures/test-complete/session-creator-jenkins-creds.json'
    }

    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
        stage('Clone Repository') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'sabuildserver_GIT_TOKEN', usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                        def gitUrl = "https://${GIT_USERNAME}:${GIT_PASSWORD}@github.freewheel.tv/HS/EDP_CypressAutomation.git"
                        git url: gitUrl, branch: 'FWS-49164'
                    }
                }
            }
        }
        stage('Config file setup') {
            steps {
                script {
                    // Copy paste Config files from Jenkins to current project
                    inject_config_file(env.PROD_CONFIG_FILE_ID, env.PROD_CONFIG_FILE_DESTINATION)
                    inject_config_file(env.QA_CONFIG_FILE_ID, env.QA_CONFIG_FILE_DESTINATION)
                    inject_config_file(env.UAT_CONFIG_FILE_ID, env.UAT_CONFIG_FILE_DESTINATION)

                    withCredentials([[$class: 'UsernamePasswordMultiBinding', credentialsId: 'TE_Agent', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD']]) {
                        def username = "${USERNAME}"
                        def password = "${PASSWORD}"
                        def testcomplete = [
                            'username': username,
                            'password': password
                        ]
                        def reporterConfig = readJSON file: env.CONFIG_FILE_PATH
                        reporterConfig.put('testcomplete', testcomplete)
                        def json = JsonOutput.toJson(reporterConfig)
                        json = JsonOutput.prettyPrint(json)
                        writeFile(file: env.CONFIG_FILE_PATH, text: json)

                        def reporterConfig1 = readJSON file: env.CONFIG_FILE_PATH
                        testcomplete = [
                            'username': reporterConfig1.testcomplete.username.values[0],
                            'password': reporterConfig1.testcomplete.password.values[0]
                        ]
                        reporterConfig.put('testcomplete', testcomplete)
                        json = JsonOutput.toJson(reporterConfig)
                        json = JsonOutput.prettyPrint(json)
                        writeFile(file: env.CONFIG_FILE_PATH, text: json)
                    }
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Start test'
                bat """
                cd ${env.CURRENT_PROJECT_PATH} && \
                npm cache clean --force && \
                npm ci --prefer-offline && \
                npx cypress run --browser chrome --env TC="SessionCreator" --config video=false --headless --spec 'cypress/integration/**/**/*.feature' --reporter cypress-mochawesome-reporter --reporter-options reportDir=cypress/reports/mochawesome-report,reportFilename=index.html,overwrite=false,html=false,json=true --config defaultCommandTimeout=60000,pageLoadTimeout=120000
                """
                echo 'Finished test'
            }
        }
    }
    post {
        always {
            script {
                bat """
                cd ${env.CURRENT_PROJECT_PATH} && \
                node ./cucumber-html-report.js
                """
                echo 'Post hello'
                // List directories and generate HTML reports
                echo "Current workspace: ${env.WORKSPACE}"
                echo "Current project path: ${env.CURRENT_PROJECT_PATH}"

                try {
                    def workspacePath = "${env.WORKSPACE}\\${env.CURRENT_PROJECT_PATH}\\cypress\\reports\\test-complete-reports"
                    echo "Workspace Path: ${workspacePath}"

                    // Use a separate script block to handle bat commands
                    def reportDirs = bat(script: """@echo off
                       for /d %%i in ("${workspacePath}\\*") do (
                       echo %%i
                      )
                      """, returnStdout: true).trim().split('\r?\n')
                    echo "Directories found: ${reportDirs.join(', ')}"
                    reportDirs.each { dir ->
                        def folderName = dir.tokenize('\\').last()
                        echo "Publishing report for folder: ${folderName}"

                        publishHTML(target: [
                              allowMissing: true,
                              alwaysLinkToLastBuild: true,
                              keepAll: true,
                              reportDir: "${dir}",
                              reportFiles: 'ViewResults.html',
                              reportName: "${folderName}",
                              reportTitles: "${folderName}"
                            ])
                        }
                } catch (Exception e) {
                        echo "Error during report publishing: ${e.message}"
                        throw e
                }
            }

            publishHTML(target: [
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: "${env.CURRENT_PROJECT_PATH}/cypress/reports",
                reportFiles: 'cucumber-reports/cucumber-html-report/index.html',
                reportName: 'Cucumber Report',
                reportTitles: 'Cucumber Report'
            ])

            publishHTML(target: [
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'E2E/ePort/cypress/reports',
                reportFiles: 'multi-html-report/index.html',
                reportName: 'Multi HTML Report',
                reportTitles: 'Multi HTML Report'
            ])
        }
    }
}

/*
  Copies the Jenkins configuration file and adds it to the current project
  [@param] configFileId: accepts Jenkins config file unique ID
  [@param] destinationFilePath: destination file path
*/
def inject_config_file(String configFileId, String destinationFilePath) {
    configFileProvider([configFile(fileId: configFileId, variable: 'configFile')]) {
        def fileContent = readFile configFile
        def jsonFileContent = readJSON text: fileContent
        def json = JsonOutput.toJson(jsonFileContent)
        json = JsonOutput.prettyPrint(json)
        writeFile(file: destinationFilePath, text: json)
    }
}

/*
  Reads the Jenkins config file
  [@param] configFileId: accepts Jenkins config file unique ID
  [@return] values of Jenkins config file
*/ 
def read_config_file(String configFileId){
    configFileProvider([configFile(fileId: configFileId, variable: 'configFile')]) {
        def fileContent = readFile configFile;
        def jsonFileContent = readJSON text: fileContent;
        return jsonFileContent;
    } 
}
